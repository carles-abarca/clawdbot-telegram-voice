{
  "id": "telegram-userbot",
  "channels": ["telegram-userbot"],
  "configSchema": {
    "type": "object",
    "additionalProperties": true,
    "properties": {
      "telegram": {
        "type": "object",
        "properties": {
          "apiId": { "type": "number" },
          "apiHash": { "type": "string" },
          "phone": { "type": "string" },
          "sessionPath": { "type": "string" }
        },
        "required": ["apiId", "apiHash", "phone"]
      },
      "stt": {
        "type": "object",
        "properties": {
          "provider": { "type": "string" },
          "whisperPath": { "type": "string" },
          "modelPath": { "type": "string" },
          "language": { "type": "string" }
        }
      },
      "tts": {
        "type": "object",
        "properties": {
          "provider": { "type": "string" },
          "piperPath": { "type": "string" },
          "voicePath": { "type": "string" }
        }
      },
      "allowedUsers": {
        "type": "array",
        "items": { "type": "number" }
      }
    }
  },
  "uiHints": {
    "telegram.apiId": { "label": "Telegram API ID", "help": "Get from my.telegram.org" },
    "telegram.apiHash": { "label": "Telegram API Hash", "sensitive": true },
    "telegram.phone": { "label": "Phone Number", "placeholder": "+1234567890" },
    "telegram.sessionPath": { "label": "Session Path" },
    "allowedUsers": { "label": "Allowed User IDs" }
  }
}
