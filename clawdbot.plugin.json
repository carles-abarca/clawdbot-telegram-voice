{
  "id": "telegram-userbot",
  "channels": ["telegram-userbot"],
  "configSchema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {}
  },
  "channelConfigSchema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "enabled": { "type": "boolean" },
      "apiId": { "type": "number" },
      "apiHash": { "type": "string" },
      "phone": { "type": "string" },
      "sessionPath": { "type": "string" },
      "pythonEnvPath": { "type": "string" },
      "allowedUsers": {
        "type": "array",
        "items": { "type": "number" }
      },
      "stt": {
        "type": "object",
        "properties": {
          "provider": { "type": "string" },
          "whisperPath": { "type": "string" },
          "modelPath": { "type": "string" },
          "language": { "type": "string" }
        }
      },
      "tts": {
        "type": "object",
        "properties": {
          "provider": { "type": "string" },
          "piperPath": { "type": "string" },
          "voicePath": { "type": "string" },
          "lengthScale": { "type": "number" }
        }
      }
    },
    "required": ["apiId", "apiHash", "phone"]
  },
  "uiHints": {
    "apiId": { "label": "Telegram API ID", "help": "Get from my.telegram.org" },
    "apiHash": { "label": "Telegram API Hash", "sensitive": true },
    "phone": { "label": "Phone Number", "placeholder": "+1234567890" },
    "sessionPath": { "label": "Session Path" },
    "pythonEnvPath": { "label": "Python Env Path" },
    "allowedUsers": { "label": "Allowed User IDs" }
  }
}
